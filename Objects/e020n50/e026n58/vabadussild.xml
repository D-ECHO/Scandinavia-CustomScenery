<?xml version="1.0"?>

<PropertyList>

  <path>vabadussild.ac</path>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>
	

  <animation>
    <type>material</type>
    <object-name>light_white</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>light_white</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light_yellow</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 0.8 </green>
      <blue>  0.3 </blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>light_yellow</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light_green</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.2 </red>
      <green> 1.0 </green>
      <blue>  0.1 </blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>light_green</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light_purple</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.7 </red>
      <green> 0.4 </green>
      <blue>  2.0 </blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>light_purple</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.47</value>
